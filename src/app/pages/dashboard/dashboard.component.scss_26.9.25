/* 3D effect for dropdowns */
nz-select {
  background: linear-gradient(145deg, #ffffff, #e6e6e6);
  box-shadow: inset 6px 6px 12px #d1d1d1, inset -6px -6px 12px #ffffff;
  border-radius: 8px;
}

/* Table styling for a 3D effect */
nz-table {
  background: #ffffff;
  box-shadow: 6px 6px 12px #d1d1d1, -6px -6px 12px #ffffff;
  border-radius: 12px;
  overflow: hidden;
}

nz-table th {
  background: #f8f8f8;
  color: #333;
  font-weight: bold;
}

nz-table td {
  background: #ffffff;
  color: #555;
}

/* Empty state styling */
.empty-state {
  text-align: center;
  color: gray;
}

.empty-state i {
  font-size: 24px;
  margin-bottom: 8px;
  text-shadow: 1px 1px 2px #ccc;
}
.search-section button[nz-button] {
  background-color: #007bff; /* Primary blue color */
  color: white; /* White text for contrast */
  border: none; /* Remove border */
  border-radius: 4px; /* Slightly rounded corners */
  padding: 8px 16px; /* Button padding */
  font-weight: bold; /* Bold text */
  transition: background-color 0.3s ease; /* Smooth hover transition */
}

.search-section button[nz-button]:hover {
  background-color: #0056b3; /* Darker blue on hover */
}

.search-section button[nz-button]:active {
  background-color: #003f7f; /* Even darker blue when pressed */
}


.stat-value {
  display: flex;
